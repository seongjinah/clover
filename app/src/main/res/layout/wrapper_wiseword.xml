<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/wiseword_background"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/wrapper_wiseword"
        android:text="명언"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="22dp"
        android:padding="10dp"
        android:fontFamily="@font/womanflower"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/wrapper_wiseword"
        android:id="@+id/wrapper_author"
        android:text="말한이"
        android:gravity="right"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:paddingRight="10dp"
        android:fontFamily="@font/womanflower"/>

    <ImageView
        android:id="@+id/wrapper_star"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/wrapper_author"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"/>

</RelativeLayout>